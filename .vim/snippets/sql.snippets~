snippet ctab
	CREATE TABLE ${1:table_name} (
		${2:column_name}			: ${3:type},
		${4}
	)
snippet checkidx
	column index_name format a30;
	column index_type format a10;
	column uniqueness format a10;
	column status format a10;
	column num_rows format 99999999;
	column last_analyzed format a20;
	column column_name format a30;
	column table_name format a30;
	column table_owner format a30;
	select a.index_name, a.column_name, b.index_type, b.uniqueness, b.status, b.num_rows, b.last_analyzed,
			 b.table_name, b.table_owner
	from all_ind_columns a, all_indexes b
	where a.index_name = b.index_name
	and a.table_name like '%${1:PARTIAL_TABLE_NAME}%';
	${2}
snippet check_optins
	column sysdate2 format a20;
	column execution_date format a20;
	column proc_name format a30;
	column execution_comment format a30;
	select to_char(sysdate,'DD-MON-YYYY HH24:MI:SS') sysdate2, 
	id, proc_name, to_char(execution_date,'DD-MON-YYYY HH24:MI:SS') execution_date, execution_comment
	from email_optins_log a
	where a.execution_date > sysdate - 3
	order by id desc;
snippet crviewas
	CREATE OR REPLACE VIEW ${1:VIEW_NAME} AS
	SELECT * FROM ${2:TABLE_NAME};
	${3}
snippet scount
	SELECT COUNT(*) FROM ${1:TABLE_NAME};
	${2}
snippet to_date
	to_date(${1:DATE_FIELD},'DD-MON-YYYY HH24:MI:SS') ${2}
snippet to_char
	to_char(${1:DATE_FIELD},'DD-MON-YYYY HH24:MI:SS') ${2}
snippet show_objects
	select * from all_objects a
	where a.object_name like '%${1:PARTIAL_OBJECT_NAME}%'
	${2}
